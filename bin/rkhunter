########################################################################
myname=`basename $0`
OLD_PWD=$PWD
cd "`dirname $0`"
mydir="${PWD%/}"
cd "$OLD_PWD"
########################################################################

# load configurations and helper functions

BASE_DIR="$(dirname $mydir)"
CONFIG="$BASE_DIR/conf/run_audit.conf"
UTILS="$BASE_DIR/bin/utils"

. "$CONFIG"
. "$UTILS"

# run rkunter audit

RKHUNTER=$(which rkhunter)

if [ "X$RKHUNTER" != "X" ] && [ -x "$RKHUNTER" ]; then
    command_name="rkhunter"
    command="$RKHUNTER"
    run_tool "$command_name" "$command"

    # output_file="$LOG_DIR/$(basename $RKHUNTER)_$(date '+%Y-%m-%d').log"
    # {
    #     echo "# Start  : $(date '+%Y-%m-%d %H:%M:%S')"
    #     echo
    #     "$RKHUNTER" --cronjob --update --rwo && echo "No warnings."
    #     echo
    #     echo "# Finish : $(date '+%Y-%m-%d %H:%M:%S')"
    # } >"$output_file" 2>&1
    # subject="$SUBJECT - ${RKHUNTER##*/} output"
    # notify "$EMAIL" "$(date '+%Y-%m-%d') $subject" "$output_file"
fi
